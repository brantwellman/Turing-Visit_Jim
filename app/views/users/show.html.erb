<h1><%= @user.name %></h1>

<div class="points">
  <p>Total Points: <%= @user.total_points %></p>
  <p>Redeemable Points: <%= @user.redeemable_points %></p>
  <p>Used Points: <%= @user.used_points %></p>   
</div>

<div>
  <ul>
    <% @gymvisits.each do |visit| %>
      <li>
        <%= "#{visit.date}: #{visit.calories_burned}" %>
        <%= link_to "Edit Visit", edit_user_gymvisit_path(@user, visit) %>
        <%= link_to "Delete Visit", user_gymvisit_path(@user, visit), method: :delete %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to "Record New Visit", new_user_gymvisit_path(@user.id) %>
